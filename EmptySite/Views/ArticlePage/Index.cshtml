@model EmptySite.Models.ViewModels.PageViewModel<EmptySite.Models.Pages.ArticlePage>

<h1>
    @Html.PropertyFor(x => x.CurrentPage.Heading) (@Model.CurrentPage.NumberOfCharsInHeading())
</h1>

<div>
    @Html.PropertyFor(x => x.CurrentPage.MainBody)
</div>

<div>
    @Html.PropertyFor(x => x.CurrentPage.MainContentArea)
</div>

@if (Model.ShowContentArea)
{
    <h2>Feature for Beta users</h2>
    <div>
        @Html.PropertyFor(x => x.CurrentPage.ProductsContentArea)
    </div>
}